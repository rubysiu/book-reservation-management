<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.xx.dao.BookDao">
    <select id="findById" resultType="book" parameterType="long">
        SELECT
            book_id,
            name,
            introd,
            number
        FROM
            book
        WHERE
            book_id = #{bookId}
    </select>
    <select id="findSome" parameterType="book" resultType="book">
        SELECT book_id,name,introd,number FROM book
        <where>

            and name like '%' #{name} '%'
        </where>
    </select>
    <select id="findAll" resultType="book">
        SELECT
            book_id,
            name,
            introd,
            number
        FROM
            book
        <where>
            <if test="name!='' and name!=null">
                and name like '%' #{name} '%'
            </if>
        </where>
    </select>

    <update id="reduceNumber">
        UPDATE book
        SET number =number -1
        WHERE
            book_id = #{bookId}
        AND number > 0
    </update>

    <delete id="delBookById">
        DELETE FROM book
            WHERE book_id = #{bookId}
    </delete>

    <insert id="addBook">
        INSERT  INTO book (name,introd,number)
        VALUES (#{name},#{introd},#{number})
    </insert>
</mapper>